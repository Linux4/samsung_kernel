	bool CAMERA_AAT_V41
	help
	  For AAT V41 camera set
config CAMERA_AAU_V02
	bool CAMERA_AAU_V02
	help
	  For AAU V02 camera set
config CAMERA_AAU_V22
	bool CAMERA_AAU_V22
	help
	  For AAU V22 camera set
config CAMERA_MMU_V32
	bool CAMERA_MMU_V32
	help
	  For MMU V32 camera set
config CAMERA_MMU_V22
	bool CAMERA_MMU_V22
	help
	  For MMU V22 camera set
endchoice
