        },
        musl_arm64: {
            srcs: ["linux_musl-arm64/bin/py3-launcher-autorun64"]
        },
        musl_x86_64: {
            srcs: ["linux_musl-x86/bin/py3-launcher-autorun64"]
        },
        darwin_x86_64: {
            srcs: ["darwin-x86/bin/py3-launcher-autorun64"],
        },
    },

    // Use the prebuilts for most branches
