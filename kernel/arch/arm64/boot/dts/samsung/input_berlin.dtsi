		tsp_io_ldo-supply = <&l18_reg>;
#endif
#if LEGO_IS_USE(l9_reg, ...)
		tsp_avdd_ldo-supply = <&l9_reg>;
#endif
		sec,irq_gpio = <SEC_GPIO_REF(AP,gpa1,gpa1,2) 0x2002>;
		support_dex_mode;
		sec,enable_sysinput_enabled;
		support_open_short_test;
	};
};

